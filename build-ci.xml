<?xml version="1.0" encoding="UTF-8"?>
<project default="xar" name="HWH-WebApp-ci" basedir="." xmlns:unless="ant:unless">

    <dirname property="HWH-WebApp-ci.basedir" file="${ant.file.HWH-WebApp-ci}"/>

    <!-- import default properties from file -->
    <property file="${HWH-WebApp-ci.basedir}/build.properties" prefix="hwh"/>
    <property file="${HWH-WebApp-ci.basedir}/local.build.properties" prefix="hwh"/>

    <!-- ToDo: -->
	<!-- switch build and dist -->
	<!-- clone wega source code, modify and build it. -->

    <target name="clean">
        <echo>Cleaning task. Deleting content of temp and dist dirs.</echo>
        <delete dir="${hwh.dist}"/>
        <delete dir="${hwh.dist.tmp.dir}"/>
        <delete dir="${hwh.temp}"/>
    </target>
	<target name="initiate">
		<echo>Initiating task. Creating temp and dist dirs.</echo>
        <mkdir dir="${hwh.dist}"/>
        <mkdir dir="${hwh.dist.tmp.dir}"/>
        <mkdir dir="${hwh.temp}"/>
    </target>

    <target name="clone-wega-webapp-repo">
        <exec executable="git" dir="${hwh.temp}" failonerror="true">
            <arg line="clone https://github.com/Henze-Digital/WeGA-WebApp.git WeGA-WebApp" />
        </exec>
    </target>
    <target name="clone-hendi-odd">
        <exec executable="git" dir="${hwh.temp}" failonerror="true">
            <!--<arg line="clone https://github.com/Henze-Digital/HWH-ODD.git HWH-ODD" />-->
        	<arg line="clone https://gitlab-ci-token:${CI_JOB_TOKEN}@git.uni-paderborn.de/vife/henze-digital/HenDi-ODD.git HenDi-ODD"/>
        </exec>
    </target>
    <target name="clone-hwh-secrets">
        <exec executable="git" dir="${hwh.temp}" failonerror="true">
            <arg line="clone https://gitlab-ci-token:${CI_JOB_TOKEN}@git.uni-paderborn.de/vife/henze-digital/hwh-data-internal-only.git hwh-data-internal-only"/>
        </exec>
    </target>

    <target name="init">
<!--        <antcall target="ci:clean"/>-->
    	<antcall target="ci:initiate"/>
        <antcall target="ci:clone-wega-webapp-repo"/>
        <antcall target="ci:clone-hendi-odd"/>
        <antcall target="ci:clone-hwh-secrets"/>
    </target>

    <!--<target name="build-wega-xar" depends="init">
        <echo>Building the WeGA-WebApp.xar</echo>
        <echo>Executing ant xar at WeGA-WebApp repo (build.xml) </echo>
        <ant antfile="build.xml" dir="temp/WeGA-WebApp/" target="xar"/>
        <echo>Finished build of WeGA-WebApp. Build successful.</echo>
    </target>-->

    <target name="get-wega-xar-data" depends="init">
        <echo>Set properties for WeGA-WebApp build.xml</echo>
        <!-- Attention: property has to be included in the same target where it is used! -->
        <property file="${hwh.temp}/WeGA-WebApp/build.properties" prefix="wega"/>
        <echo>Get the WeGA-WebApp.xar (unzip to dist dir).</echo>
        <mkdir dir="${hwh.temp}/WeGA-WebApp/${wega.build.dir}/"/>
        <get src="https://github.com/Edirom/WeGA-WebApp/releases/download/v${hwh.wega.project.version}/${wega.project.app}-${hwh.wega.project.version}.xar" dest="${hwh.temp}/WeGA-WebApp/${wega.build.dir}/${wega.project.app}-${hwh.wega.project.version}.xar"/>
        <unzip src="${hwh.temp}/WeGA-WebApp/${wega.build.dir}/${wega.project.app}-${hwh.wega.project.version}.xar" dest="${hwh.dist}"/>
    </target>

    <target name="prepare-hwh-specs" depends="init">
        <echo>Prepare the WebApp-specs for Henze-Digital.</echo>
        <antcall target="ci:prepare-package-files"/>
        <antcall target="ci:prepare-css"/>
        <antcall target="ci:prepare-hendi-odd"/>
    </target>

    <target name="prepare-package-files">
        <echo>Create expath-pkg.xml</echo>
        <copy file="data/expath-pkg.xml.tmpl" tofile="${hwh.dist.tmp.dir}/expath-pkg.xml" filtering="true" overwrite="true">
            <filterset>
                <filter token="project.app" value="${hwh.project.app}"/>
                <filter token="project.name" value="${hwh.project.name}"/>
                <filter token="project.version" value="${hwh.project.version}"/>
            </filterset>
        </copy>
        <echo>Create repo.xml</echo>
        <copy file="data/repo.xml.tmpl" tofile="${hwh.dist.tmp.dir}/repo.xml" filtering="true" overwrite="true">
            <filterset>
                <filter token="project.app" value="${hwh.project.app}"/>
                <filter token="project.author" value="${hwh.project.author}"/>
                <filter token="project.name" value="${hwh.project.name}"/>
            </filterset>
        </copy>
    </target>

    <target name="prepare-css">
        <echo>Get sass data from WeGA</echo>
        <copy todir="${hwh.dist.tmp.dir}/resources/sass/">
            <fileset dir="${hwh.temp}/WeGA-WebApp/resources/sass/">
                <include name="**/*.*"/>
            </fileset>
        </copy>
        <echo>Get sass data from Henze-Digital</echo>
        <copy todir="${hwh.dist.tmp.dir}/resources/sass/" overwrite="yes">
            <fileset dir="data/resources/sass/">
                <include name="**/*.*"/>
            </fileset>
        </copy>
        <echo>Create CSS files via sass</echo>
        <copy todir="${hwh.dist.tmp.dir}/" overwrite="yes">
            <fileset dir="${hwh.temp}/WeGA-WebApp/">
                <include name="node_modules/bootstrap/**"/>
                <include name="node_modules/font-awesome/**"/>
            </fileset>
        </copy>
        <exec executable="${sass.path}">
        	<arg line="${hwh.dist.tmp.dir}/resources/sass/main.scss ${hwh.dist.tmp.dir}/resources/css/styles.css"/>
        </exec>
        <echo>Run minify on CSS files</echo>
        <apply executable="${minify.path}" parallel="false">
            <fileset dir="${hwh.dist.tmp.dir}/resources/css" includes="*.css" excludes="*min.css"/>
            <redirector>
                <outputmapper type="glob" from="*.css" to="${hwh.dist.tmp.dir}/resources/css/*-min.css"/>
            </redirector>
        </apply>
    </target>

    <target name="prepare-hendi-odd">
    	<echo>Get HenDi-ODD data</echo>
    	<copy todir="${hwh.dist.tmp.dir}/HenDi-ODD">
    		<fileset dir="${hwh.temp}/HenDi-ODD">
                <include name="compiled-ODD/*.xml"/>
                <include name="src/**/*.xml"/>
            </fileset>
        </copy>
    </target>

    <target name="update-dist" depends="get-wega-xar-data, prepare-hwh-specs">
        <echo>Override the unzipped WeGA-WebApp data with hwh-webapp specs</echo>
        <echo>Copy hwh-spec data.</echo>
        <copy todir="${hwh.dist}/" overwrite="yes">
            <fileset dir="data/">
                <include name="catalogues/"/>
                <include name="resources/favicons/"/>
                <include name="templates/"/>
                <include name="controller.xql"/>
                <include name="README.md"/>
                <include name="LICENSE"/>
                <exclude name="*.tmpl"/>
            </fileset>
        </copy>
        <echo>Copy processed hwh-spec data (dist.tmp.dir)</echo>
        <copy todir="${hwh.dist}" overwrite="yes">
            <fileset dir="${hwh.dist.tmp.dir}">
                <include name="*.*"/>
                <include name="resources/"/>
                <include name="templates/"/>
                <exclude name="node_modules/"/>
            </fileset>
        </copy>
        <echo>Add icon.png</echo>
        <copy todir="${hwh.dist}" overwrite="yes">
            <file file="${hwh.temp}/hwh-data-internal-only/wega-app/img/icon.png"/>
        </copy>
        <echo>Add image files to resources/img</echo>
        <copy todir="${hwh.dist}/resources/img/" overwrite="yes">
            <fileset dir="${hwh.temp}/hwh-data-internal-only/wega-app/img/">
                <include name="*.png"/>
                <include name="*.jpg"/>
                <exclude name="icon.png"/>
            </fileset>
        </copy>
        <echo>Add favicons.</echo>
        <copy todir="${hwh.dist}/resources/favicons" overwrite="yes">
            <fileset dir="${hwh.temp}/hwh-data-internal-only/wega-app/">
                <include name="favicon*.png"/>
            </fileset>
        </copy>
        <echo>Add fonts.</echo>
        <copy todir="${hwh.dist}/resources/fonts" failonerror="false">
            <fileset dir="${hwh.temp}/hwh-data-internal-only/wega-app/fonts">
                <include name="*.*"/>
            </fileset>
        </copy>

    	<echo>Override the WeGA-ODD with HenDi-ODD data</echo>
        <delete>
            <fileset dir="${hwh.dist}/resources/lib/WeGA-ODD">
                <include name="**/*.*"/>
            </fileset>
        </delete>
        <copy todir="${hwh.dist}/resources/lib/WeGA-ODD" overwrite="yes">
        	<fileset dir="${hwh.dist.tmp.dir}/HenDi-ODD">
                <include name="**/*.*"/>
            </fileset>
        </copy>
        <echo>Override the WeGA Guidelines with the Henze-Digital Guidelines</echo>
        <delete>
            <fileset dir="${hwh.dist}/guidelines">
                <include name="*.xml"/>
            </fileset>
        </delete>
        <copy todir="${hwh.dist}/guidelines">
        	<fileset dir="${hwh.dist.tmp.dir}/HenDi-ODD/compiled-ODD">
                <include name="*.xml"/>
            </fileset>
        </copy>
    </target>

    <target name="xar" depends="update-dist">
        <echo>Creating the xar Package (zipping).</echo>
        <zip destfile="webapp/${hwh.project.app}-${hwh.project.version}.xar">
            <fileset dir="${hwh.dist}"/>
        </zip>
    </target>
</project>
